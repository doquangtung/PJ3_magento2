<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.container">
            <block class="LoyaltyProgram\RewardPoint\Block\Cart\Custom" name="checkout.cart.custom" as="storecredit"
                   template="LoyaltyProgram_RewardPoint::cart/custom.phtml" after="-"/>
        </referenceContainer>
        <!-- <referenceContainer name="checkout.cart.totals.container">
            <block class="LoyaltyProgram\RewardPoint\Block\Cart\Point" name="checkout.cart.point" as="storecredit"
                   template="LoyaltyProgram_RewardPoint::cart/cart_point.phtml" after="-"/>
        </referenceContainer> -->
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="custom_amount" xsi:type="array">
                                    <item name="component" xsi:type="string">LoyaltyProgram_RewardPoint/js/view/checkout/cart/totals/custom_amount</item>
                                    <item name="sortOrder" xsi:type="string">20</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">LoyaltyProgram_RewardPoint/checkout/cart/totals/custom_amount</item>
                                        <item name="title" xsi:type="string">Custom Amount</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>