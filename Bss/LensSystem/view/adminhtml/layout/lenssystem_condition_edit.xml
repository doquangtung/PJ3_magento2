<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Bss_LensSystem::css/jsTree.min.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Store\Switcher" name="lenssystem_condition.store.switcher" template="Magento_Backend::store/switcher.phtml" >
                <action method="setUseConfirm">
                    <argument name="params" xsi:type="string">1</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block name="source_trees" class="Magento\Framework\View\Element\Template" template="Bss_LensSystem::condition/source_trees.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <uiComponent name="lenssystem_condition_form"/>
        </referenceContainer>
    </body>
</page>
