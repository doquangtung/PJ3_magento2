<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/lenssystem/api/flow/:sku" method="GET">
        <service class="Bss\LensSystem\Api\LensManagementInterface" method="getLensBySku"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/lenssystem/api/verify" method="POST">
        <service class="Bss\LensSystem\Api\LensManagementInterface" method="verify"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
